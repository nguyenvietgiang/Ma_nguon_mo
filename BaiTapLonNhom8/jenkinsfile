pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/nguyenvietgiang/Ma_nguon_mo.git'
                script {
                    docker.build('django-app')
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                        docker.image('django-app').push('latest')
                    }
                }
            }
        }
    }
}